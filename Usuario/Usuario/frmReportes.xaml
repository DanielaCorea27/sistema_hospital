<Window x:Class="Usuario.frmReportes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Usuario"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Reportes" Height="759" 
        Width="1258"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="326*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnExpedientePacientes" Content="EXPEDIENTE DE PACIENTES" Height="98" Margin="108,217,420,0" VerticalAlignment="Top" Width="382" FontSize="25" FontWeight="Bold" Foreground="#DD000000" BorderBrush="Black" Grid.ColumnSpan="2" Click="btnExpedientePacientes_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFB1C9EF" Offset="1"/>
                    <GradientStop Color="#FFD9E4F7" Offset="0.487"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btnRecetasPacientes" Content="RECETAS POR PACIENTES" Height="98" Margin="413,217,248,0" VerticalAlignment="Top" Width="382" FontSize="25" FontWeight="Bold" Foreground="#DD000000" BorderBrush="Black" Grid.Column="1" Grid.ColumnSpan="3" Click="btnRecetasPacientes_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFB1C9EF" Offset="1"/>
                    <GradientStop Color="#FFD9E4F7" Offset="0.487"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btnExamenesPacientes" Content="EXAMENES POR PACIENTES" Height="98" Margin="108,470,420,0" VerticalAlignment="Top" Width="382" FontSize="25" FontWeight="Bold" Foreground="#DD000000" BorderBrush="Black" Grid.ColumnSpan="2" Click="btnExamenesPacientes_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFB1C9EF" Offset="1"/>
                    <GradientStop Color="#FFD9E4F7" Offset="0.487"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btnConsultasMedico" Content="CONSULTAS POR MEDICOS" Height="98" Margin="414,470,247,0" VerticalAlignment="Top" Width="382" FontSize="25" FontWeight="Bold" Foreground="#DD000000" BorderBrush="Black" Grid.Column="1" Grid.ColumnSpan="3" Click="btnConsultasMedico_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFB1C9EF" Offset="1"/>
                    <GradientStop Color="#FFD9E4F7" Offset="0.487"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


        <Rectangle Grid.ColumnSpan="4" Margin="0,3,0,651">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#F0F3FA"/>
                    <GradientStop Color="#D5DEEF" Offset="1"/>
                    <GradientStop Color="#B1C9EF" Offset="0.5"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="1000" Grid.ColumnSpan="4" Margin="10,-93,0,608">
            <Button x:Name="btnPacientes" Content="Pacientes" Background="#395886" BorderBrush="white" Click="btnPacientes_Click"/>
            <Button x:Name="btnHistorialesMedicos" Content="Historiales Médicos" Background="#395886" BorderBrush="white"/>
            <Button x:Name="btnMedicos" Content="Médicos" Background="#395886" BorderBrush="white"/>
            <Button x:Name="btnConsultas" Content="Consultas" Background="#395886" BorderBrush="white"/>
            <Button x:Name="btnRecetas" Content="Recetas" Background="#395886" BorderBrush="white"/>
            <Button x:Name="btnCitas" Content="Citas" Background="#395886" BorderBrush="white"/>
            <Button x:Name="btnExamenes" Content="Examenes" Background="#395886" BorderBrush="white"/>
            <Button x:Name="btnReportes" Content="Reportes" Background="#395886" BorderBrush="white"/>
            <Button x:Name="btnUsuarios" Content="Usuarios" Background="#395886" BorderBrush="white"/>
        </StackPanel>
        <Label Content="REPORTES" 
   HorizontalAlignment="Left" 
   VerticalAlignment="Top" 
   FontSize="40" 
   Margin="10,48,0,0"
   Foreground="BLACK" Grid.ColumnSpan="2" Height="60" Width="384"/>

        <Grid Grid.ColumnSpan="2" Margin="0,0,630,0">
            <Button x:Name="btnHome" Background="white" Margin="979,42,-856,657" Height="60" BorderBrush="white" Click="btnHome_Click">
                <Image Source="Assets/regresar.png" Height="50" Width="60" RenderTransformOrigin="0.485,1.68"/>
            </Button>
        </Grid>

    </Grid>
</Window>
